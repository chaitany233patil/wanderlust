<% layout('layout/boilerplate')%>
  <body>
    <form method="post" action="/listings/add">
      <h1>Add your listing here</h1>
      <input
        name="listing[title]"
        type="text"
        placeholder="title"
      /><br /><br />
      <textarea name="listing[description]" placeholder="description"></textarea
      ><br /><br />
      <input
        name="Imageurl"
        placeholder="imageUrl"
        type="text"
        value="https://images.unsplash.com/photo-1518684079-3c830dcef090?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8Mnx8ZHViYWl8ZW58MHx8MHx8fDA%3D&auto=format&fit=crop&w=800&q=60"
      /><br /><br />
      <input
        name="listing[price]"
        placeholder="price"
        type="number"
      /><br /><br />
      <input
        name="listing[location]"
        placeholder="location"
        type="text"
      /><br /><br />
      <button>Add Listing</button>
    </form>
  </body>
</html>
